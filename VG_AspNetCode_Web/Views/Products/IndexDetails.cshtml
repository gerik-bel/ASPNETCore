@model WebApp01Introduction.Models.Products

<tr>
    <td>@Model.ProductId</td>
    <td>@Model.ProductName</td>
    <td>
        @if (Model.Category != null)
        {
            @Model.Category.CategoryName;
        }
    </td>
    <td>@Model.Discontinued</td>
    <td>@Model.QuantityPerUnit</td>
    <td>@Model.ReorderLevel</td>
    <td>
        @if (Model.Supplier != null)
        {
            @Model.Supplier.CompanyName;
        }
    </td>
    <td>@Model.UnitPrice</td>
    <td>@Model.UnitsInStock</td>
    <td>@Model.UnitsOnOrder</td>
    <td>
        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@Model.ProductId">View</a>
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>
    </td>
</tr>